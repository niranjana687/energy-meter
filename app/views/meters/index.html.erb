<p id="notice"><%= notice %></p>

<h1>Meters</h1>

<table>
  <thead>
    <tr>
      <th>Energy consumed</th>
      <th>Total energy credits</th>
      <th>Energy credits rate</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meters.each do |meter| %>
      <tr>
        <td><%= meter.energy_consumed %></td>
        <td><%= meter.total_energy_credits %></td>
        <td><%= meter.energy_credits_rate %></td>
        <td><%= meter.balance %></td>
        <td><%= link_to 'Show', meter %></td>
        <td><%= link_to 'Edit', edit_meter_path(meter) %></td>
        <td><%= link_to 'Destroy', meter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

